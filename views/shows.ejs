<%- include ("partials/header") %>

<div id="showhotel" class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">comfy stay</p>
            <div class="list-group">
                <li class="list-group-item active">info1</li>
                <li class="list-group-item">info1</li>
                <li class="list-group-item">info1</li>
            </div>

        </div>
        <div class="col-md-9">
            <div class="container img-thumbnail ">
                <img class="img-fluid " style="width: 100%; height: auto;" src="<%= campgrounds.image %>">
                <div class="caption">
                    <h4 class="float-right"> Rs<%= campgrounds.price %>/night</h4>
                    <h4><a href="/campgrounds"><%=campgrounds.name %></a></h4>
                    <p><%= campgrounds.description %></p>
                    <P><em>By <%= campgrounds.author.username%></em></P>
                </div>
                <% if(currentUser && campgrounds.author.id.equals(currentUser._id)){ %>
                <a href="/campgrounds/<%=campgrounds._id%>/edit">
                    <button id="btn" class="btn btn-sm btn-outline-warning">Edit</button>
                </a>
                <form id="delete_inline" action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
                    <button id="btn" class="btn btn-sm btn-outline-danger">Delete</button>

                </form>
                <% } %>


            </div>
            <hr>
            <div class="container img-thumbnail bg-light ">
                <p>
                    <a class="float-right" href="/campgrounds/<%= campgrounds._id%>/comments/new">
                        <button class="btn btn-sm btn-success">Add new comment</button>
                    </a>
                </p>
                <br>
                <!-- <div class="caption"> -->
                <% campgrounds.comments.forEach((comments)=>{%>
                <p class="float-right bottom"> 10 days ago</p>
                <p class="bottom">
                    <strong><%= comments.author.username %></strong>
                </p>
                <p class="col-md-12 bottom">
                    <%= comments.text %>
                </p>
                <% if(currentUser && comments.author.id.equals(currentUser._id)){ %>
                <a href="/campgrounds/<%=campgrounds._id%>/comments/<%=comments._id%>/edit">
                    <button id="btn" class="btn btn-sm btn-outline-warning">Edit</button>
                </a>
                <form id="delete_inline"
                    action="/campgrounds/<%=campgrounds._id%>/comments/<%=comments._id%>?_method=DELETE" method="POST">
                    <button id="btn" class="btn btn-sm btn-outline-danger">Delete</button>

                </form>
                <%}%>
                <% }); %>

                <!-- </div> -->

            </div>
            <br>
            <p>
                <a href="/campgrounds">
                    <button class="btn btn-outline-secondary btn-sm">To Camgrounds</button>
                </a>

            </p>


            <br>
        </div>
    </div>


</div>




<%- include ("partials/footer") %>