<%- include ("partials/header") %>
<div class="container">

    <h1 style="text-align: center;">ADD A NEW HOTEL</h1>
    <div style="width:30%; margin: 0 auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class=" form-control" type="text" placeholder="name" name="name" required>
            </div>
            <div class="form-group">
                <input class=" form-control" type="text" placeholder="img url" name="image" required>
            </div>
            <div class="form-group">
                <input class=" form-control" type="number" placeholder="price" name="price" required step="1">
            </div>
            <div class="form-group">
                <input class=" form-control" type="text" placeholder="description" name="description" required>
            </div>
            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
        <p>
            <a href="/campgrounds">Go back</a>
        </p>
    </div>
</div>
</div>
<%- include ("partials/footer") %>